  "name": "t:general.footer",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Tecnología innovadora de bienestar para tu confort diario."
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "text",
      "id": "col1_title",
      "label": "Column 1 title",
      "default": "Enlaces Rápidos"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Support menu"
    },
    {
      "type": "text",
      "id": "col2_title",
      "label": "Column 2 title",
      "default": "Soporte"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Mantente al Día"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Recibe ofertas exclusivas y consejos de bienestar en tu bandeja de entrada."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
