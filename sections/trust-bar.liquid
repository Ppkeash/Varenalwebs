{% comment %}
  VARENAL Trust Bar - Social proof bar with metrics
{% endcomment %}

<section class="trust-bar full-width">
  <div class="trust-bar__inner">
    {% for block in section.blocks %}
      <div class="trust-bar__item" {{ block.shopify_attributes }}>
        <span class="trust-bar__number">{{ block.settings.number }}</span>
        <span class="trust-bar__label">{{ block.settings.label }}</span>
      </div>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .trust-bar {
    background: var(--color-foreground);
    color: #fff;
  }

  .trust-bar__inner {
    max-width: min(var(--page-width), calc(100% - var(--page-margin) * 2));
    margin: 0 auto;
    padding: 2.5rem var(--page-margin);
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .trust-bar__item {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .trust-bar__number {
    font-family: var(--font-heading--family);
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    font-weight: 700;
    background: var(--gradient-brand);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .trust-bar__label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
  }

  @media (max-width: 600px) {
    .trust-bar__inner {
      padding: 2rem var(--page-margin);
      gap: 1.5rem;
    }

    .trust-bar__item {
      flex: 1 1 40%;
    }
  }
{% endstylesheet %}

{% schema %}
