  "name": "Trust Bar",
  "settings": [],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "10,000+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
