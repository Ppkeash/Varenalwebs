{% comment %}
  VARENAL Announcement Bar
{% endcomment %}

{% if section.settings.text != blank %}
  <div class="announcement-bar full-width">
    <div class="announcement-bar__inner">
      <p>
        {% if section.settings.link != blank %}
          <a href="{{ section.settings.link }}">{{ section.settings.text }}</a>
        {% else %}
          {{ section.settings.text }}
        {% endif %}
      </p>
    </div>
  </div>
{% endif %}

{% stylesheet %}
  .announcement-bar {
    background: var(--gradient-brand);
    color: #fff;
    text-align: center;
  }

  .announcement-bar__inner {
    padding: 0.6rem var(--page-margin);
  }

  .announcement-bar__inner p {
    font-size: 0.85rem;
    font-weight: 500;
    letter-spacing: 0.03em;
    margin: 0;
  }

  .announcement-bar__inner a {
    color: #fff;
    text-decoration: none;
  }

  .announcement-bar__inner a:hover {
    text-decoration: underline;
  }
{% endstylesheet %}

