<section class="varenal-cart varenal-section">
  <h1 class="varenal-cart__title">{{ 'cart.title' | t }}</h1>

  {% if cart.item_count == 0 %}
    <div class="varenal-cart__empty">
      <div class="varenal-cart__empty-icon" aria-hidden="true">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="1.5"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
      </div>
      <p class="varenal-cart__empty-text">Tu carrito estÃ¡ vacÃ­o</p>
      <a href="{{ routes.all_products_collection_url }}" class="btn-varenal-primary">
        Seguir comprando
      </a>
    </div>
  {% else %}
    <form action="{{ routes.cart_url }}" method="post" class="varenal-cart__form">
      <div class="varenal-cart__items">
        {% for item in cart.items %}
          <div class="varenal-cart__item">
            <a href="{{ item.url }}" class="varenal-cart__item-image-wrap">
              {% if item.image %}
                {{ item.image | image_url: width: 200 | image_tag: class: 'varenal-cart__item-image', loading: 'lazy' }}
              {% endif %}
            </a>

            <div class="varenal-cart__item-details">
              <a href="{{ item.url }}" class="varenal-cart__item-title">{{ item.product.title }}</a>
              {% if item.variant.title != 'Default Title' %}
                <p class="varenal-cart__item-variant">{{ item.variant.title }}</p>
              {% endif %}
              <div class="varenal-cart__item-price">
                {% if item.original_line_price != item.final_line_price %}
                  <span class="varenal-cart__item-price-old">{{ item.original_line_price | money }}</span>
                {% endif %}
                <span class="varenal-cart__item-price-current">{{ item.final_line_price | money }}</span>
              </div>
            </div>

            <div class="varenal-cart__item-actions">
              <div class="varenal-cart__qty-wrap">
                <input
                  type="number"
                  name="updates[]"
                  value="{{ item.quantity }}"
                  min="0"
                  class="varenal-cart__qty-input"
                  aria-label="Cantidad"
                >
              </div>
              <a href="{{ item.url_to_remove }}" class="varenal-cart__item-remove" aria-label="{{ 'cart.remove' | t }}">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="varenal-cart__footer">
        <div class="varenal-cart__totals">
          <div class="varenal-cart__totals-row">
            <span>Subtotal</span>
            <span class="varenal-cart__totals-price">{{ cart.total_price | money }}</span>
          </div>
          <p class="varenal-cart__totals-note">Impuestos y envÃ­o calculados al pagar</p>
        </div>

        <div class="varenal-cart__actions">
          <button type="submit" name="update" class="btn-varenal-ghost varenal-cart__update-btn">
            {{ 'cart.update' | t }}
          </button>
          <button type="submit" name="checkout" class="btn-varenal-primary varenal-cart__checkout-btn">
            {{ 'cart.checkout' | t }} â€” {{ cart.total_price | money }}
          </button>
        </div>

        <div class="varenal-cart__trust">
          <span>ðŸ”’ Pago seguro</span>
          <span>ðŸšš EnvÃ­o gratis</span>
          <span>â†© 60 dÃ­as de devoluciÃ³n</span>
        </div>
      </div>
    </form>
  {% endif %}
</section>

{% stylesheet %}
  .varenal-cart__title {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 800;
    font-size: 2rem;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .varenal-cart__empty {
    text-align: center;
    padding: 4rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .varenal-cart__empty-icon { opacity: 0.4; }

  .varenal-cart__empty-text {
    font-size: 1.1rem;
    color: var(--color-text-muted, #6B7280);
  }

  .varenal-cart__items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .varenal-cart__item {
    display: grid;
    grid-template-columns: 100px 1fr auto;
    gap: 1.25rem;
    align-items: center;
    padding: 1.25rem;
    background: var(--color-white, #fff);
    border-radius: var(--radius-lg, 16px);
    box-shadow: var(--shadow-sm, 0 1px 3px rgba(0,0,0,0.06));
    border: 1px solid rgba(0,0,0,0.04);
    transition: box-shadow var(--transition-base);
  }

  .varenal-cart__item:hover {
    box-shadow: var(--shadow-md, 0 4px 16px rgba(0,0,0,0.1));
  }

  .varenal-cart__item-image-wrap {
    width: 100px;
    height: 100px;
    border-radius: var(--radius-md, 8px);
    overflow: hidden;
    background: var(--color-background, #F8F9FA);
  }

  .varenal-cart__item-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .varenal-cart__item-title {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 1rem;
    color: var(--color-text, #2D2D2D);
    text-decoration: none;
    display: block;
    margin-bottom: 0.25rem;
  }

  .varenal-cart__item-title:hover {
    color: var(--color-primary, #00B4C8);
  }

  .varenal-cart__item-variant {
    font-size: 0.85rem;
    color: var(--color-text-muted, #6B7280);
    margin-bottom: 0.5rem;
  }

  .varenal-cart__item-price-current {
    font-weight: 700;
    color: var(--color-primary, #00B4C8);
    font-size: 1.05rem;
  }

  .varenal-cart__item-price-old {
    text-decoration: line-through;
    color: var(--color-text-muted, #6B7280);
    font-size: 0.9rem;
    margin-right: 0.5rem;
  }

  .varenal-cart__item-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .varenal-cart__qty-input {
    width: 64px;
    height: 40px;
    text-align: center;
    border: 1px solid rgba(0,0,0,0.12);
    border-radius: var(--radius-md, 8px);
    font-size: 0.95rem;
    font-weight: 600;
    background: var(--color-background, #F8F9FA);
    transition: border-color var(--transition-base);
  }

  .varenal-cart__qty-input:focus {
    outline: none;
    border-color: var(--color-primary, #00B4C8);
    box-shadow: 0 0 0 3px rgba(0, 180, 200, 0.15);
  }

  .varenal-cart__item-remove {
    color: var(--color-text-muted, #6B7280);
    transition: color var(--transition-base);
    padding: 0.25rem;
  }

  .varenal-cart__item-remove:hover { color: #e53e3e; }

  .varenal-cart__footer {
    background: var(--color-white, #fff);
    border-radius: var(--radius-lg, 16px);
    padding: 2rem;
    box-shadow: var(--shadow-sm, 0 1px 3px rgba(0,0,0,0.06));
    border: 1px solid rgba(0,0,0,0.04);
  }

  .varenal-cart__totals {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(0,0,0,0.06);
  }

  .varenal-cart__totals-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .varenal-cart__totals-price {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-primary, #00B4C8);
  }

  .varenal-cart__totals-note {
    font-size: 0.85rem;
    color: var(--color-text-muted, #6B7280);
    margin-top: 0.5rem;
  }

  .varenal-cart__actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .varenal-cart__update-btn { flex: 0 0 auto; min-width: 140px; }
  .varenal-cart__checkout-btn { flex: 1; font-size: 1rem; }

  .varenal-cart__trust {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    font-size: 0.85rem;
    color: var(--color-text-muted, #6B7280);
  }

  @media (max-width: 768px) {
    .varenal-cart__item {
      grid-template-columns: 80px 1fr;
      gap: 1rem;
    }
    .varenal-cart__item-actions {
      grid-column: 1 / -1;
      justify-content: space-between;
    }
    .varenal-cart__actions { flex-direction: column; }
    .varenal-cart__trust {
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }
  }
{% endstylesheet %}

