<section class="varenal-collections varenal-section">
  <h1 class="varenal-collections__title">{{ 'collections.title' | t }}</h1>

  <div class="varenal-collections__grid">
    {% for collection in collections %}
      <a href="{{ collection.url }}" class="varenal-coll-card">
        <div class="varenal-coll-card__image-wrap">
          {% if collection.image %}
            {{ collection.image | image_url: width: 600 | image_tag: class: 'varenal-coll-card__image', loading: 'lazy' }}
          {% elsif collection.products.first.featured_image %}
            {{ collection.products.first.featured_image | image_url: width: 600 | image_tag: class: 'varenal-coll-card__image', loading: 'lazy' }}
          {% else %}
            {{ 'collection-1' | placeholder_svg_tag: 'varenal-coll-card__placeholder' }}
          {% endif %}
          <div class="varenal-coll-card__overlay"></div>
        </div>
        <div class="varenal-coll-card__content">
          <h2 class="varenal-coll-card__name">{{ collection.title }}</h2>
          <span class="varenal-coll-card__count">{{ collection.products_count }} {{ 'collection.products_count' | t }}</span>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .varenal-collections__title {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 800;
    font-size: 2rem;
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .varenal-collections__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .varenal-coll-card {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    border-radius: var(--radius-lg, 16px);
    overflow: hidden;
    aspect-ratio: 4 / 3;
    box-shadow: var(--shadow-sm, 0 1px 3px rgba(0,0,0,0.06));
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .varenal-coll-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md, 0 4px 16px rgba(0,0,0,0.1));
  }

  .varenal-coll-card__image-wrap {
    position: absolute;
    inset: 0;
  }

  .varenal-coll-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .varenal-coll-card:hover .varenal-coll-card__image {
    transform: scale(1.08);
  }

  .varenal-coll-card__placeholder {
    width: 50%;
    height: 50%;
    margin: 25%;
    opacity: 0.2;
  }

  .varenal-coll-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(26, 26, 46, 0.8) 0%, rgba(26, 26, 46, 0.1) 60%);
    transition: opacity 0.3s ease;
  }

  .varenal-coll-card:hover .varenal-coll-card__overlay {
    background: linear-gradient(to top, rgba(26, 26, 46, 0.9) 0%, rgba(26, 26, 46, 0.2) 60%);
  }

  .varenal-coll-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    z-index: 1;
  }

  .varenal-coll-card__name {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 1.2rem;
    color: #fff;
    margin-bottom: 0.25rem;
  }

  .varenal-coll-card__count {
    font-family: var(--font-tech, 'Space Grotesk', sans-serif);
    font-size: 0.8rem;
    color: rgba(255,255,255,0.7);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .varenal-collections__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    .varenal-collections__title { font-size: 1.5rem; }
  }

  @media (max-width: 480px) {
    .varenal-collections__grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

