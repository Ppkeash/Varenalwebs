{% stylesheet %}
  /* ============================================
     VARENAL FEATURES v3 ‚Äî Ultra-Creative
     ============================================ */

  .varenal-features {
    position: relative;
    background: #FFFFFF;
    overflow: hidden;
  }

  /* Subtle gradient bg */
  .feat__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .feat__bg-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg,
      #FFFFFF 0%,
      #F4FAFB 30%,
      #FFFFFF 60%,
      #FFF8F5 80%,
      #FFFFFF 100%
    );
  }

  /* Container */
  .feat__container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 80px 20px;
    display: flex;
    flex-direction: column;
    gap: 64px;
  }

  /* Section header */
  .feat__header {
    text-align: center;
    margin-bottom: 16px;
  }

  .feat__title {
    font-family: var(--font-heading);
    font-weight: 800;
    font-size: 30px;
    line-height: 1.15;
    color: var(--color-text, #2D2D2D);
    margin-top: 20px;
    margin-bottom: 16px;
  }

  .feat__subtitle {
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.7;
    color: var(--color-text-muted, #6B7280);
    max-width: 520px;
    margin: 0 auto;
  }

  /* --- Feature block --- */
  .feat__block {
    display: flex;
    flex-direction: column;
    gap: 36px;
    align-items: center;
  }

  /* --- Media column --- */
  .feat__media { width: 100%; }

  .feat__img-wrap {
    position: relative;
    width: 100%;
    aspect-ratio: 5 / 4;
    border-radius: 24px;
    overflow: hidden;
    background: linear-gradient(135deg, #F0F4F8 0%, #E8F4F6 100%);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.08);
    transition: transform 0.5s var(--ease-spring), box-shadow 0.5s ease;
  }

  .feat__img-wrap:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 56px rgba(0, 0, 0, 0.12);
  }

  .feat__img-glow {
    position: absolute;
    inset: -30%;
    border-radius: 50%;
    pointer-events: none;
    z-index: 0;
    opacity: 0.6;
  }

  .feat__img-glow--orange { background: radial-gradient(circle, rgba(255, 107, 53, 0.15) 0%, transparent 65%); }
  .feat__img-glow--teal   { background: radial-gradient(circle, rgba(0, 180, 200, 0.12) 0%, transparent 65%); }

  .feat__img,
  .feat__img-placeholder {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .feat__img-placeholder svg { width: 100%; height: 100%; }

  /* Floating chip inside image */
  .feat__chip {
    position: absolute;
    z-index: 2;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(26, 26, 46, 0.88);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    color: #FFFFFF;
    font-family: var(--font-tech);
    font-size: 12px;
    font-weight: 500;
    padding: 10px 18px;
    border-radius: 999px;
    white-space: nowrap;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .feat__chip svg { color: var(--color-primary-light, #33D4E8); }

  .feat__chip--bottom-right { bottom: 16px; right: 16px; }
  .feat__chip--bottom-left  { bottom: 16px; left: 16px; }

  /* --- Text column --- */
  .feat__text {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 14px;
  }

  .feat__step-num {
    font-family: var(--font-heading);
    font-weight: 900;
    font-size: 56px;
    line-height: 1;
    background: linear-gradient(135deg, rgba(0,180,200,0.15) 0%, rgba(0,180,200,0.05) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.03em;
  }

  .feat__badge {
    align-self: flex-start;
  }

  .feat__heading {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 26px;
    line-height: 1.2;
    color: var(--color-text, #2D2D2D);
  }

  .feat__body {
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.75;
    color: var(--color-text-muted, #6B7280);
    max-width: 480px;
  }

  /* Spec pills */
  .feat__pills {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 8px;
  }

  .feat__pill {
    background: #F0F4F8;
    color: var(--color-text, #2D2D2D);
    font-family: var(--font-tech);
    font-size: 13px;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 999px;
    white-space: nowrap;
    border: 1px solid #E5E9ED;
    transition: all 0.3s var(--ease-spring);
  }

  .feat__pill:hover,
  .feat__pill--active {
    background: var(--color-primary);
    color: #FFFFFF;
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 180, 200, 0.2);
  }

  /* Icon grid */
  .feat__icon-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-top: 8px;
  }

  .feat__icon-card {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 14px 16px;
    background: #F8FAFB;
    border: 1px solid #E8EDF0;
    border-radius: 14px;
    transition: all 0.3s var(--ease-spring);
  }

  .feat__icon-card:hover {
    transform: translateY(-3px);
    border-color: rgba(0, 180, 200, 0.3);
    box-shadow: 0 6px 20px rgba(0, 180, 200, 0.1);
  }

  .feat__icon-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: rgba(0, 180, 200, 0.1);
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .feat__icon-card span {
    font-family: var(--font-body);
    font-size: 13px;
    font-weight: 600;
    color: var(--color-text, #2D2D2D);
  }

  /* Material chips */
  .feat__mat-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 8px;
  }

  .feat__mat-chip {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: #F0FAF5;
    color: var(--color-success, #10B981);
    font-family: var(--font-body);
    font-size: 13px;
    font-weight: 600;
    padding: 8px 16px;
    border-radius: 999px;
    white-space: nowrap;
    border: 1px solid rgba(16, 185, 129, 0.15);
  }

  /* ========== Desktop ========== */
  @media (min-width: 769px) {
    .feat__container {
      padding: 120px 40px;
      gap: 100px;
    }

    .feat__title { font-size: 46px; }
    .feat__subtitle { font-size: 18px; }

    .feat__block {
      flex-direction: row;
      gap: 64px;
    }

    .feat__media,
    .feat__text {
      flex: 1;
      width: 50%;
    }

    .feat__block--img-right .feat__media {
      order: 1;
    }

    .feat__heading { font-size: 34px; }

    .feat__body { font-size: 17px; }

    .feat__step-num { font-size: 72px; }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    'use strict';
    var section = document.getElementById('how-it-works');
    if (!section) return;

    var targets = section.querySelectorAll('.animate-on-scroll');
    if (!targets.length) return;

    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -60px 0px'
    });

    targets.forEach(function(el) { observer.observe(el); });
  })();
{% endjavascript %}

