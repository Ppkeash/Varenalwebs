{% comment %}
  VARENAL Hero Banner - Main landing section with product showcase
{% endcomment %}

<section class="hero full-width">
  <div class="hero__container">
    <div class="hero__content">
      <span class="hero__badge">{{ section.settings.badge_text }}</span>
      <h1 class="hero__title">
        {{ section.settings.title_line1 }}
        <span class="gradient-text">{{ section.settings.title_highlight }}</span>
        {{ section.settings.title_line2 }}
      </h1>
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
      <div class="hero__cta">
        <a href="{{ section.settings.cta_link }}" class="btn btn-primary btn-large">
          {{ section.settings.cta_text }}
        </a>
        {% if section.settings.secondary_cta_text != blank %}
          <a href="{{ section.settings.secondary_cta_link }}" class="btn btn-secondary btn-large">
            {{ section.settings.secondary_cta_text }}
          </a>
        {% endif %}
      </div>
      <div class="hero__trust">
        <div class="hero__trust-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>{{ section.settings.trust_1 }}</span>
        </div>
        <div class="hero__trust-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>{{ section.settings.trust_2 }}</span>
        </div>
        <div class="hero__trust-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>{{ section.settings.trust_3 }}</span>
        </div>
      </div>
    </div>
    <div class="hero__media">
      {% if section.settings.hero_image %}
        <img
          src="{{ section.settings.hero_image | image_url: width: 800 }}"
          alt="{{ section.settings.hero_image.alt | default: 'VARENAL Product' }}"
          width="800"
          height="800"
          loading="eager"
          class="hero__image"
        >
      {% else %}
        <div class="hero__image-placeholder">
          <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="1"><rect x="3" y="3" width="18" height="18" rx="2"/><circle cx="8.5" cy="8.5" r="1.5"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
          <p>Sube tu imagen de producto</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero {
    background: linear-gradient(135deg, #f0faf8 0%, #ffffff 50%, #f5fef7 100%);
    overflow: hidden;
    padding: 2rem 0;
  }

  .hero__container {
    max-width: min(var(--page-width), calc(100% - var(--page-margin) * 2));
    margin: 0 auto;
    padding: 3rem var(--page-margin);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    min-height: 80vh;
  }

  .hero__badge {
    display: inline-block;
    background: rgba(45, 181, 163, 0.1);
    color: var(--color-primary);
    padding: 0.4rem 1.2rem;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.6s ease forwards;
  }

  .hero__title {
    font-size: clamp(2.2rem, 5vw, 3.5rem);
    line-height: 1.15;
    margin-bottom: 1.5rem;
    animation: fadeInUp 0.8s ease forwards;
  }

  .hero__subtitle {
    font-size: 1.15rem;
    color: #555;
    line-height: 1.8;
    max-width: 520px;
    margin-bottom: 2rem;
    animation: fadeInUp 1s ease forwards;
  }

  .hero__cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2.5rem;
    animation: fadeInUp 1.1s ease forwards;
  }

  .hero__trust {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    animation: fadeInUp 1.3s ease forwards;
  }

  .hero__trust-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.85rem;
    color: #555;
    font-weight: 500;
  }

  .hero__trust-item svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .hero__media {
    display: flex;
    justify-content: center;
    align-items: center;
    animation: slideInRight 1s ease forwards;
  }

  .hero__image {
    border-radius: 20px;
    box-shadow: 0 25px 60px rgba(45, 181, 163, 0.15);
    transition: transform 0.4s ease;
    max-width: 100%;
    height: auto;
  }

  .hero__image:hover {
    transform: scale(1.02);
  }

  .hero__image-placeholder {
    width: 100%;
    min-height: 400px;
    background: rgba(45, 181, 163, 0.05);
    border: 2px dashed rgba(45, 181, 163, 0.3);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    color: #999;
  }

  @media (max-width: 768px) {
    .hero__container {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      min-height: auto;
      padding: 2rem var(--page-margin);
      text-align: center;
    }

    .hero__media {
      order: -1;
    }

    .hero__subtitle {
      max-width: none;
    }

    .hero__cta {
      justify-content: center;
    }

    .hero__trust {
      justify-content: center;
    }

    .hero__image {
      max-width: 85%;
    }
  }
{% endstylesheet %}

