<section class="varenal-password">
  <div class="varenal-password__container">
    <div class="varenal-password__brand">
      <span class="varenal-password__logo">VARENAL</span>
    </div>

    <h1 class="varenal-password__title">{{ 'password.title' | t }}</h1>
    <p class="varenal-password__subtitle">{{ 'password.subtitle' | t }}</p>

    {% form 'storefront_password' %}
      <div class="varenal-password__form">
        {% if form.errors %}
          <div class="varenal-password__error">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div class="varenal-password__input-wrap">
          <input
            type="password"
            name="password"
            class="varenal-input varenal-password__input"
            placeholder="{{ 'password.placeholder' | t }}"
            aria-label="{{ 'password.placeholder' | t }}"
          >
          <button type="submit" class="btn-varenal-primary varenal-password__submit">
            {{ 'password.button' | t }}
          </button>
        </div>
      </div>
    {% endform %}

    <p class="varenal-password__owner">
      {{ 'password.owner' | t }}
      <a href="/admin" class="varenal-password__admin-link">{{ 'password.owner_link' | t }}</a>
    </p>
  </div>
</section>

{% stylesheet %}
  .varenal-password {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(145deg, var(--color-secondary, #1A1A2E) 0%, #0f0f1e 100%);
  }

  .varenal-password__container {
    text-align: center;
    max-width: 440px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  .varenal-password__brand { margin-bottom: 1rem; }

  .varenal-password__logo {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 800;
    font-size: 2rem;
    letter-spacing: 0.1em;
    background: linear-gradient(135deg, var(--color-primary, #00B4C8), #00d4e8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .varenal-password__title {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 1.5rem;
    color: #fff;
  }

  .varenal-password__subtitle {
    color: rgba(255,255,255,0.6);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .varenal-password__form {
    width: 100%;
    margin-top: 0.5rem;
  }

  .varenal-password__error {
    background: rgba(239, 68, 68, 0.15);
    color: #fca5a5;
    padding: 0.75rem 1rem;
    border-radius: var(--radius-md, 8px);
    font-size: 0.85rem;
    margin-bottom: 1rem;
  }

  .varenal-password__input-wrap {
    display: flex;
    gap: 0;
    background: rgba(255,255,255,0.08);
    border: 1px solid rgba(255,255,255,0.12);
    border-radius: var(--radius-full, 999px);
    padding: 0.3rem;
    transition: border-color 0.2s;
  }

  .varenal-password__input-wrap:focus-within {
    border-color: var(--color-primary, #00B4C8);
  }

  .varenal-password__input {
    flex: 1;
    background: transparent;
    border: none;
    color: #fff;
    padding: 0.7rem 1rem;
    font-size: 0.95rem;
  }

  .varenal-password__input::placeholder {
    color: rgba(255,255,255,0.4);
  }

  .varenal-password__input:focus {
    box-shadow: none;
    outline: none;
  }

  .varenal-password__submit {
    flex-shrink: 0;
    border-radius: var(--radius-full, 999px);
    padding: 0.65rem 1.5rem;
    font-size: 0.9rem;
  }

  .varenal-password__owner {
    color: rgba(255,255,255,0.4);
    font-size: 0.8rem;
    margin-top: 1rem;
  }

  .varenal-password__admin-link {
    color: var(--color-primary, #00B4C8);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .varenal-password__admin-link:hover { color: #fff; }
{% endstylesheet %}

