<section class="varenal-page varenal-section">
  <div class="varenal-page__header">
    <h1 class="varenal-page__title">{{ page.title }}</h1>
  </div>

  <div class="varenal-page__content rte">
    {{ page.content }}
  </div>
</section>

{% stylesheet %}
  .varenal-page__header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .varenal-page__title {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 800;
    font-size: 2.2rem;
    line-height: 1.2;
  }

  .varenal-page__content {
    max-width: 760px;
    margin: 0 auto;
    font-size: 1.05rem;
    line-height: 1.8;
    color: var(--color-text, #2D2D2D);
  }

  .varenal-page__content h2,
  .varenal-page__content h3,
  .varenal-page__content h4 {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .varenal-page__content h2 { font-size: 1.5rem; }
  .varenal-page__content h3 { font-size: 1.25rem; }

  .varenal-page__content p {
    margin-bottom: 1rem;
  }

  .varenal-page__content ul,
  .varenal-page__content ol {
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .varenal-page__content li {
    margin-bottom: 0.5rem;
  }

  .varenal-page__content img {
    border-radius: var(--radius-md, 8px);
    max-width: 100%;
    height: auto;
  }

  .varenal-page__content blockquote {
    border-left: 4px solid var(--color-primary, #00B4C8);
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: rgba(0, 180, 200, 0.05);
    border-radius: 0 var(--radius-md, 8px) var(--radius-md, 8px) 0;
    font-style: italic;
    color: var(--color-text-muted, #6B7280);
  }

  .varenal-page__content a {
    color: var(--color-primary, #00B4C8);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s;
  }

  .varenal-page__content a:hover {
    color: var(--color-secondary, #1A1A2E);
  }

  .varenal-page__content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    border-radius: var(--radius-md, 8px);
    overflow: hidden;
  }

  .varenal-page__content th,
  .varenal-page__content td {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(0,0,0,0.06);
  }

  .varenal-page__content th {
    background: var(--color-background, #F8F9FA);
    font-weight: 700;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  @media (max-width: 768px) {
    .varenal-page__title { font-size: 1.6rem; }
    .varenal-page__content { font-size: 1rem; }
  }
{% endstylesheet %}

