{% comment %}
  VARENAL FAQ Accordion section
{% endcomment %}

<section class="faq section-padding" id="faq">
  <div class="section-heading">
    <h2>{{ section.settings.title | default: 'Frequently Asked' }} <span class="gradient-text">{{ section.settings.title_highlight | default: 'Questions' }}</span></h2>
    <p>{{ section.settings.subtitle }}</p>
  </div>

  <div class="faq__list">
    {% for block in section.blocks %}
      <details class="faq__item" {{ block.shopify_attributes }}>
        <summary class="faq__question">
          <span>{{ block.settings.question }}</span>
          <svg class="faq__chevron" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"><polyline points="6 9 12 15 18 9"/></svg>
        </summary>
        <div class="faq__answer">
          <p>{{ block.settings.answer }}</p>
        </div>
      </details>
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .faq__list {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .faq__item {
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq__item:hover {
    border-color: rgba(45, 181, 163, 0.3);
  }

  .faq__item[open] {
    border-color: rgba(45, 181, 163, 0.4);
    box-shadow: 0 4px 15px rgba(45, 181, 163, 0.08);
  }

  .faq__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.2rem 1.5rem;
    cursor: pointer;
    font-family: var(--font-heading--family);
    font-weight: 600;
    font-size: 1rem;
    color: var(--color-foreground);
    list-style: none;
    transition: color 0.3s ease;
  }

  .faq__question::-webkit-details-marker {
    display: none;
  }

  .faq__question::marker {
    display: none;
    content: '';
  }

  .faq__question:hover {
    color: var(--color-primary);
  }

  .faq__chevron {
    flex-shrink: 0;
    transition: transform 0.3s ease;
    color: var(--color-primary);
  }

  .faq__item[open] .faq__chevron {
    transform: rotate(180deg);
  }

  .faq__answer {
    padding: 0 1.5rem 1.3rem;
  }

  .faq__answer p {
    font-size: 0.95rem;
    color: #555;
    line-height: 1.7;
  }
{% endstylesheet %}

