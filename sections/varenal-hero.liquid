{% comment %}
  VARENAL Hero Section v3 — Ultra-Creative
  Premium conversion-focused hero with animated 2-column split layout.
  Morphing blob background, floating particles, staggered entrance animations.
  Mobile-first: image first on mobile, text first on desktop.
{% endcomment %}

{%- liquid
  assign hero_product = section.settings.product
  unless hero_product
    assign hero_product = collections.all.products.first
  endunless
  if hero_product
    assign hero_product_url = hero_product.url
    assign hero_product_image = hero_product.featured_image
    assign hero_product_price = hero_product.price | money
    assign hero_product_compare = hero_product.compare_at_price
  endif
-%}

<div id="scroll-sentinel" style="position:absolute;top:200px;width:1px;height:1px;"></div>

<section class="varenal-hero" {{ section.shopify_attributes }}>
  {%- comment -%} Animated background elements {%- endcomment -%}
  <div class="hero__bg" aria-hidden="true">
    <div class="hero__bg-blob hero__bg-blob--1"></div>
    <div class="hero__bg-blob hero__bg-blob--2"></div>
    <div class="hero__bg-dots"></div>
    <div class="hero__bg-gradient"></div>
  </div>

  <div class="hero__container">
    {%- comment -%} IMAGE COLUMN — appears first on mobile {%- endcomment -%}
    <div class="hero__image-col" data-hero-animate="image">
      <div class="hero__image-wrap">
        {%- comment -%} Animated glow ring behind image {%- endcomment -%}
        <div class="hero__image-ring" aria-hidden="true"></div>
        <div class="hero__image-glow" aria-hidden="true"></div>

        {%- liquid
          if section.settings.hero_image
            assign display_image = section.settings.hero_image
            assign display_alt = section.settings.hero_image.alt | default: 'VARENAL Wireless Ankle Heating Pad'
          elsif hero_product_image
            assign display_image = hero_product_image
            assign display_alt = hero_product_image.alt | default: hero_product.title
          endif
        -%}
        {% if display_image %}
          {{ display_image | image_url: width: 1200 | image_tag:
            class: 'hero__image',
            loading: 'eager',
            alt: display_alt
          }}
        {% else %}
          <div class="hero__image-placeholder">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}

        {%- comment -%} Floating spec chip {%- endcomment -%}
        <div class="hero__spec-chip" data-hero-animate="chip">
          <span class="hero__spec-icon">⚙️</span>
          {{ section.settings.spec_chip_text | default: '3 niveles de calor • 3 modos de vibración • 2000mAh' }}
        </div>

        {%- comment -%} Floating cert badge {%- endcomment -%}
        <div class="hero__cert-badge" data-hero-animate="chip">
          ✓ {{ section.settings.cert_badge_text | default: 'CE & RoHS' }}
        </div>

        {%- comment -%} Decorative floating dots {%- endcomment -%}
        <div class="hero__float-dot hero__float-dot--1" aria-hidden="true"></div>
        <div class="hero__float-dot hero__float-dot--2" aria-hidden="true"></div>
        <div class="hero__float-dot hero__float-dot--3" aria-hidden="true"></div>
      </div>
    </div>

    {%- comment -%} TEXT COLUMN {%- endcomment -%}
    <div class="hero__text-col">
      {%- comment -%} 1. Urgency badge with glow {%- endcomment -%}
      <div data-hero-animate="badge">
        <span class="varenal-badge hero__urgency-badge">
          ⚡ {{ section.settings.badge_text | default: 'ENVÍO GRATIS — Stock limitado' }}
        </span>
      </div>

      {%- comment -%} 2. Headline with gradient accent {%- endcomment -%}
      <h1 class="hero__headline" data-hero-animate="headline">
        {{ section.settings.headline | default: 'Tus pies trabajan 8 horas. Se merecen esto.' }}
      </h1>

      {%- comment -%} 3. Subheadline {%- endcomment -%}
      <p class="hero__subheadline" data-hero-animate="subheadline">
        {{ section.settings.subheadline | default: 'Termoterapia clínica + masaje por vibración para dolor de tobillo, mala circulación y recuperación deportiva. Inalámbrico. Alivio instantáneo.' }}
      </p>

      {%- comment -%} 4. Social proof micro-bar {%- endcomment -%}
      <div class="hero__social-proof" data-hero-animate="social">
        <div class="hero__stars" aria-label="4.9 de 5 estrellas">
          {%- for i in (1..5) -%}
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#00B4C8" aria-hidden="true"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          {%- endfor -%}
        </div>
        <span class="hero__rating-text">
          {{ section.settings.social_proof_text | default: '4.9/5 — 2,300+ clientes' }}
        </span>
        <span class="hero__separator" aria-hidden="true"></span>
        <span class="hero__guarantee">
          ✓ {{ section.settings.guarantee_text | default: 'Garantía de 60 días' }}
        </span>
      </div>

      {%- comment -%} 5. Price block {%- endcomment -%}
      {%- liquid
        if hero_product
          assign cta_href = hero_product_url
        else
          assign cta_href = section.settings.cta_primary_url | default: '#'
        endif
      -%}

      {% if hero_product %}
        <div class="hero__price-block" data-hero-animate="cta">
          {% if hero_product_compare > hero_product.price %}
            <span class="hero__price-old">{{ hero_product_compare | money }}</span>
            <span class="hero__price-current">{{ hero_product_price }}</span>
            <span class="hero__price-save">-{{ hero_product_compare | minus: hero_product.price | times: 100 | divided_by: hero_product_compare }}%</span>
          {% else %}
            <span class="hero__price-current">{{ hero_product_price }}</span>
          {% endif %}
        </div>
      {% endif %}

      {%- comment -%} 6. CTA buttons {%- endcomment -%}
      <div class="hero__cta-block" data-hero-animate="cta">
        <a href="{{ cta_href }}" class="btn-varenal-primary hero__cta-primary">
          {{ section.settings.cta_primary_text | default: 'Comprar ahora — Alivio instantáneo' }}
        </a>
        <a href="#how-it-works" class="btn-varenal-ghost hero__cta-ghost">
          {{ section.settings.cta_secondary_text | default: 'Descubre cómo funciona ↓' }}
        </a>
      </div>

      {%- comment -%} 7. Trust icons row {%- endcomment -%}
      <div class="hero__trust-row" data-hero-animate="trust">
        <span class="hero__trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
          {{ section.settings.trust_text_1 | default: 'Pago seguro' }}
        </span>
        <span class="hero__trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="3" width="15" height="13" rx="2"/><path d="m16 8 5 3-5 3V8z"/></svg>
          {{ section.settings.trust_text_2 | default: 'Envío en 24h' }}
        </span>
        <span class="hero__trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="1 4 1 10 7 10"/><path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"/></svg>
          {{ section.settings.trust_text_3 | default: 'Devolución gratis' }}
        </span>
      </div>
    </div>
  </div>
</section>

{%- comment -%} Sticky Buy Now CTA {%- endcomment -%}
<div class="buy-now-sticky" id="buy-now-sticky">
  <a href="{{ cta_href }}" class="btn-varenal-primary">
    {{ section.settings.cta_primary_text | default: 'Comprar ahora — Alivio instantáneo' }}
    {% if hero_product %}<span class="buy-now-sticky__price">— {{ hero_product_price }}</span>{% endif %}
  </a>
</div>

{% stylesheet %}
  /* ============================================
     VARENAL HERO v3 — Ultra-Creative
     ============================================ */

  .varenal-hero {
    position: relative;
    min-height: 100vh;
    min-height: 100svh;
    display: flex;
    align-items: center;
    background: var(--gradient-hero, #F8F9FA);
    overflow: hidden;
  }

  /* --- Animated background --- */
  .hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .hero__bg-blob {
    position: absolute;
    border-radius: 42% 58% 70% 30% / 45% 45% 55% 55%;
    filter: blur(80px);
    opacity: 0.12;
    animation: morphBlob 20s ease-in-out infinite;
  }

  .hero__bg-blob--1 {
    width: 500px;
    height: 500px;
    background: var(--color-primary);
    top: -10%;
    right: -5%;
    animation-delay: 0s;
  }

  .hero__bg-blob--2 {
    width: 400px;
    height: 400px;
    background: var(--color-accent);
    bottom: -15%;
    left: -10%;
    animation-delay: -10s;
  }

  .hero__bg-dots {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, rgba(0, 180, 200, 0.06) 1px, transparent 1px);
    background-size: 32px 32px;
  }

  .hero__bg-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
    background: linear-gradient(to top, var(--color-background) 0%, transparent 100%);
  }

  /* --- Container --- */
  .hero__container {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 48px;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 80px 24px 64px;
  }

  /* --- Image column --- */
  .hero__image-col {
    order: -1;
    display: flex;
    justify-content: center;
    opacity: 0;
  }

  .hero__image-col.animate {
    animation: scaleIn 0.8s var(--ease-spring) 0.2s forwards;
  }

  .hero__image-wrap {
    position: relative;
    width: 70vw;
    max-width: 480px;
    aspect-ratio: 1 / 1;
  }

  .hero__image-ring {
    position: absolute;
    inset: -12px;
    border-radius: 28px;
    border: 2px solid rgba(0, 180, 200, 0.15);
    animation: borderGlow 4s ease-in-out infinite;
  }

  .hero__image-glow {
    position: absolute;
    inset: -25%;
    background: radial-gradient(circle, rgba(0, 180, 200, 0.15) 0%, transparent 65%);
    z-index: 0;
    pointer-events: none;
    animation: glowPulse 5s ease-in-out infinite;
  }

  .hero__image,
  .hero__image-placeholder {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 24px;
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.1);
  }

  .hero__image-placeholder svg { width: 100%; height: 100%; }

  /* Floating spec chip */
  .hero__spec-chip {
    position: absolute;
    bottom: -8px;
    left: 8px;
    z-index: 3;
    background: rgba(26, 26, 46, 0.9);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    color: #fff;
    font-family: var(--font-tech, 'Space Grotesk', sans-serif);
    font-size: 12px;
    font-weight: 500;
    padding: 10px 18px;
    border-radius: 999px;
    white-space: nowrap;
    max-width: calc(100% - 16px);
    overflow: hidden;
    text-overflow: ellipsis;
    opacity: 0;
    display: flex;
    align-items: center;
    gap: 6px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .hero__spec-icon { font-size: 14px; }

  .hero__spec-chip.animate {
    animation: fadeInUp 0.6s var(--ease-spring) 0.6s forwards;
  }

  @media (max-width: 480px) {
    .hero__spec-chip { font-size: 10px; padding: 8px 14px; }
  }

  /* Floating cert badge */
  .hero__cert-badge {
    position: absolute;
    top: -8px;
    right: 8px;
    z-index: 3;
    background: var(--color-primary);
    color: #fff;
    font-family: var(--font-tech, 'Space Grotesk', sans-serif);
    font-size: 11px;
    font-weight: 600;
    padding: 8px 16px;
    border-radius: 999px;
    opacity: 0;
    box-shadow: 0 4px 16px rgba(0, 180, 200, 0.3);
    animation: float 4s ease-in-out infinite;
    animation-play-state: paused;
  }

  .hero__cert-badge.animate {
    animation: fadeInDown 0.5s var(--ease-spring) 0.7s forwards, float 4s ease-in-out 1.2s infinite;
  }

  /* Floating decorative dots */
  .hero__float-dot {
    position: absolute;
    border-radius: 50%;
    z-index: 2;
  }

  .hero__float-dot--1 {
    width: 10px;
    height: 10px;
    background: var(--color-primary);
    opacity: 0.4;
    top: 10%;
    left: -8%;
    animation: float 6s ease-in-out infinite;
  }

  .hero__float-dot--2 {
    width: 6px;
    height: 6px;
    background: var(--color-accent);
    opacity: 0.5;
    bottom: 20%;
    right: -5%;
    animation: floatSlow 5s ease-in-out 1s infinite;
  }

  .hero__float-dot--3 {
    width: 8px;
    height: 8px;
    background: var(--color-primary-light);
    opacity: 0.3;
    top: 60%;
    left: -12%;
    animation: floatX 7s ease-in-out 2s infinite;
  }

  /* --- Text column --- */
  .hero__text-col {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Urgency badge */
  .hero__urgency-badge {
    animation: pulseGlow 3s infinite;
  }

  [data-hero-animate="badge"] { opacity: 0; }
  [data-hero-animate="badge"].animate {
    animation: fadeInUp 0.6s var(--ease-spring) 0s forwards;
  }

  /* Headline */
  .hero__headline {
    font-family: var(--font-heading);
    font-weight: 900;
    font-size: 34px;
    line-height: 1.08;
    color: var(--color-text, #2D2D2D);
    letter-spacing: -0.02em;
    opacity: 0;
  }

  .hero__headline.animate {
    animation: fadeInUp 0.7s var(--ease-spring) 0.1s forwards;
  }

  /* Subheadline */
  .hero__subheadline {
    font-family: var(--font-body);
    font-size: 17px;
    line-height: 1.7;
    color: var(--color-text-muted, #6B7280);
    max-width: 500px;
    opacity: 0;
  }

  .hero__subheadline.animate {
    animation: fadeInUp 0.6s var(--ease-spring) 0.2s forwards;
  }

  /* Social proof micro-bar */
  .hero__social-proof {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
    font-size: 14px;
    color: var(--color-text, #2D2D2D);
    opacity: 0;
  }

  .hero__social-proof.animate {
    animation: fadeInUp 0.6s var(--ease-spring) 0.3s forwards;
  }

  .hero__stars { display: flex; gap: 2px; }

  .hero__separator {
    width: 1px;
    height: 16px;
    background: var(--color-text-muted, #6B7280);
    opacity: 0.3;
  }

  .hero__guarantee {
    color: var(--color-success, #10B981);
    font-weight: 600;
  }

  /* Price block */
  .hero__price-block {
    display: flex;
    align-items: center;
    gap: 14px;
    opacity: 0;
  }

  .hero__price-block.animate {
    animation: fadeInUp 0.6s var(--ease-spring) 0.35s forwards;
  }

  .hero__price-current {
    font-family: var(--font-heading);
    font-weight: 800;
    font-size: 36px;
    color: var(--color-primary, #00B4C8);
  }

  .hero__price-old {
    font-size: 20px;
    color: var(--color-text-muted, #6B7280);
    text-decoration: line-through;
    opacity: 0.6;
  }

  .hero__price-save {
    background: var(--color-accent);
    color: #fff;
    font-size: 13px;
    font-weight: 700;
    padding: 5px 12px;
    border-radius: 999px;
    animation: microBounce 2s ease-in-out 2s infinite;
  }

  /* CTA block */
  .hero__cta-block {
    display: flex;
    flex-direction: column;
    gap: 14px;
    max-width: 340px;
    opacity: 0;
  }

  .hero__cta-block.animate {
    animation: fadeInUp 0.6s var(--ease-spring) 0.4s forwards;
  }

  .hero__cta-primary {
    font-size: 1rem;
    height: 56px;
  }

  /* Trust icons row */
  .hero__trust-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 16px;
    font-size: 13px;
    color: var(--color-text-muted, #6B7280);
    opacity: 0;
  }

  .hero__trust-row.animate {
    animation: fadeInUp 0.5s var(--ease-spring) 0.5s forwards;
  }

  .hero__trust-item {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .hero__trust-item svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  /* ============================================
     DESKTOP (min-width: 769px)
     ============================================ */

  @media (min-width: 769px) {
    .hero__container {
      flex-direction: row;
      align-items: center;
      gap: 80px;
      padding: 100px 48px;
    }

    .hero__text-col {
      flex: 0 0 52%;
      order: -1;
      gap: 28px;
    }

    .hero__image-col {
      flex: 0 0 48%;
      order: 0;
    }

    .hero__image-wrap {
      width: 100%;
      max-width: 540px;
    }

    .hero__headline {
      font-size: 56px;
    }

    .hero__subheadline {
      font-size: 19px;
    }

    .hero__cta-block {
      flex-direction: row;
      max-width: 480px;
    }

    .hero__price-current {
      font-size: 42px;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    'use strict';

    var heroSection = document.querySelector('.varenal-hero');
    if (!heroSection) return;

    /* Animate all hero elements */
    function animateHero() {
      var elements = heroSection.querySelectorAll('[data-hero-animate]');
      elements.forEach(function(el) { el.classList.add('animate'); });

      var headline = heroSection.querySelector('.hero__headline');
      if (headline) headline.classList.add('animate');

      var sub = heroSection.querySelector('.hero__subheadline');
      if (sub) sub.classList.add('animate');

      var social = heroSection.querySelector('.hero__social-proof');
      if (social) social.classList.add('animate');

      var imageCol = heroSection.querySelector('.hero__image-col');
      if (imageCol) imageCol.classList.add('animate');
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', animateHero);
    } else {
      animateHero();
    }

    /* Sticky Buy Now CTA via IntersectionObserver */
    var sentinel = document.getElementById('scroll-sentinel');
    var stickyBtn = document.getElementById('buy-now-sticky');
    if (!sentinel || !stickyBtn) return;

    var mobileBreakpoint = 768;
    var isMobile = window.innerWidth <= mobileBreakpoint;

    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (!entry.isIntersecting) {
          stickyBtn.classList.add('is-visible');
        } else {
          stickyBtn.classList.remove('is-visible');
        }
      });
    }, { threshold: 0 });

    if (isMobile) { sentinel.style.top = '300px'; }
    observer.observe(sentinel);

    window.addEventListener('resize', function() {
      var nowMobile = window.innerWidth <= mobileBreakpoint;
      if (nowMobile !== isMobile) {
        isMobile = nowMobile;
        sentinel.style.top = isMobile ? '300px' : '200px';
      }
    });

    /* Smooth scroll for ghost CTA */
    var ghostBtn = heroSection.querySelector('.hero__cta-ghost');
    if (ghostBtn) {
      ghostBtn.addEventListener('click', function(e) {
        var target = document.querySelector(ghostBtn.getAttribute('href'));
        if (target) {
          e.preventDefault();
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    }
  })();
{% endjavascript %}

