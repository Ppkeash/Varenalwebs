{% comment %}
  VARENAL Product Page - Optimized for conversion
{% endcomment %}

<div class="product-page varenal-section">
  <div class="product-page__grid">
    <div class="product-page__gallery">
      {%- assign current_variant = product.selected_or_first_available_variant -%}
      {%- if current_variant.featured_image -%}
        {%- assign featured_image = current_variant.featured_image -%}
      {%- else -%}
        {%- assign featured_image = product.featured_image -%}
      {%- endif -%}

      <div class="product-page__image-wrap product-page__image-wrap--main" id="product-main-image">
        <img
          src="{{ featured_image | image_url: width: 900 }}"
          alt="{{ featured_image.alt | default: product.title | escape }}"
          width="{{ featured_image.width }}"
          height="{{ featured_image.height }}"
          class="product-page__image"
          id="product-main-img"
          loading="eager"
        >
      </div>

      {% if product.images.size > 1 %}
        <div class="product-page__thumbnails" id="product-thumbnails">
          {% for image in product.images %}
            <button
              type="button"
              class="product-page__thumb {% if image == featured_image %}product-page__thumb--active{% endif %}"
              data-image-url="{{ image | image_url: width: 900 }}"
              data-image-alt="{{ image.alt | default: product.title | escape }}"
              data-image-id="{{ image.id }}"
              aria-label="Imagen {{ forloop.index }}"
            >
              <img
                src="{{ image | image_url: width: 150 }}"
                alt="{{ image.alt | default: product.title | escape }}"
                width="150"
                height="150"
                loading="lazy"
              >
            </button>
          {% endfor %}
        </div>
      {% endif %}
    </div>

    <div class="product-page__info">
      {% if product.metafields.custom.badge %}
        <span class="product-page__badge">{{ product.metafields.custom.badge }}</span>
      {% endif %}

      <h1 class="product-page__title">{{ product.title }}</h1>

      <div class="product-page__rating">
        {% for i in (1..5) %}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="var(--color-secondary)" stroke="none"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        {% endfor %}
        <span class="product-page__rating-text">4.8 (128 reseñas)</span>
      </div>

      <div class="product-page__price" id="product-price">
        {% if product.compare_at_price > product.price %}
          <span class="product-page__price-old" id="price-compare">{{ product.compare_at_price | money }}</span>
          <span class="product-page__price-sale" id="price-current">{{ product.price | money }}</span>
          <span class="product-page__price-save" id="price-save">
            Ahorra {{ product.compare_at_price | minus: product.price | money }}
          </span>
        {% else %}
          <span class="product-page__price-current" id="price-current">{{ product.price | money }}</span>
        {% endif %}
      </div>

      <div class="product-page__description">
        {{ product.description }}
      </div>

      <div class="product-page__features-mini">
        <div class="product-page__feature-mini">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>3 Niveles de Calor (48°C–58°C)</span>
        </div>
        <div class="product-page__feature-mini">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>Inalámbrico y Recargable</span>
        </div>
        <div class="product-page__feature-mini">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>Control por Pantalla LED Táctil</span>
        </div>
        <div class="product-page__feature-mini">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>Apagado Automático 15 min</span>
        </div>
      </div>

      {% form 'product', product %}
        {% if product.variants.size > 1 %}
          <div class="product-page__variants">
            <label for="variant-select" class="product-page__label">Opción:</label>
            <select name="id" id="variant-select" class="product-page__select">
              {% for variant in product.variants %}
                <option
                  value="{{ variant.id }}"
                  {% if variant == current_variant %}selected="selected"{% endif %}
                  data-price="{{ variant.price | money }}"
                  data-compare-price="{{ variant.compare_at_price | money }}"
                  data-compare-price-raw="{{ variant.compare_at_price }}"
                  data-price-raw="{{ variant.price }}"
                  {% if variant.featured_image %}
                    data-image-id="{{ variant.featured_image.id }}"
                    data-image-url="{{ variant.featured_image | image_url: width: 900 }}"
                    data-image-alt="{{ variant.featured_image.alt | default: variant.title | escape }}"
                  {% endif %}
                  {% unless variant.available %}disabled{% endunless %}
                >
                  {{ variant.title }} - {{ variant.price | money }}
                  {% unless variant.available %} (Agotado){% endunless %}
                </option>
              {% endfor %}
            </select>
          </div>
        {% else %}
          <input type="hidden" name="id" value="{{ current_variant.id }}">
        {% endif %}

        <div class="product-page__quantity">
          <label for="qty" class="product-page__label">Cantidad:</label>
          <input type="number" id="qty" name="quantity" min="1" value="1" class="product-page__qty-input">
        </div>

        <button type="submit" class="btn-varenal-primary product-page__add-btn" id="add-to-cart-btn"
          data-add-text="Agregar al Carrito"
          data-sold-out="Agotado"
          {% unless current_variant.available %}disabled{% endunless %}
        >
          {% if current_variant.available %}
            Agregar al Carrito — {{ current_variant.price | money }}
          {% else %}
            Agotado
          {% endif %}
        </button>

        {{ form | payment_button }}
      {% endform %}

      <div class="product-page__trust-badges">
        <div class="product-page__trust-badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2"><rect x="1" y="3" width="15" height="13" rx="2"/><path d="m16 8 5 3-5 3V8z"/></svg>
          <span>Envío Gratis</span>
        </div>
        <div class="product-page__trust-badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          <span>Garantía 30 Días</span>
        </div>
        <div class="product-page__trust-badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="var(--color-primary)" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
          <span>Pago Seguro</span>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .product-page__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .product-page__gallery {
    display: grid;
    gap: 1rem;
    position: sticky;
    top: 100px;
  }

  .product-page__image-wrap {
    border-radius: 20px;
    overflow: hidden;
    background: linear-gradient(135deg, #F4F6F8 0%, #EDF7F8 100%);
    transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.5s ease;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
  }

  .product-page__image-wrap:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .product-page__image {
    width: 100%;
    height: auto;
    border-radius: 20px;
    transition: transform 0.6s ease, opacity 0.4s ease;
  }

  .product-page__image.is-switching {
    opacity: 0;
    transform: scale(0.97);
  }

  .product-page__image-wrap:hover .product-page__image {
    transform: scale(1.03);
  }

  /* Thumbnails */
  .product-page__thumbnails {
    display: flex;
    gap: 0.6rem;
    flex-wrap: wrap;
  }

  .product-page__thumb {
    width: 72px;
    height: 72px;
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid transparent;
    cursor: pointer;
    background: #F4F6F8;
    padding: 0;
    transition: border-color 0.3s ease, transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.3s ease;
  }

  .product-page__thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }

  .product-page__thumb--active {
    border-color: var(--color-primary, #00B4C8);
    box-shadow: 0 0 0 3px rgba(0, 180, 200, 0.15);
  }

  .product-page__thumb:hover {
    transform: translateY(-2px);
    border-color: rgba(0, 180, 200, 0.4);
  }

  .product-page__badge {
    display: inline-block;
    background: rgba(0, 180, 200, 0.1);
    color: var(--color-primary, #00B4C8);
    padding: 0.35rem 1.1rem;
    border-radius: 999px;
    font-family: var(--font-tech, 'Space Grotesk', sans-serif);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    border: 1px solid rgba(0, 180, 200, 0.15);
  }

  .product-page__title {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 800;
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    margin-bottom: 0.8rem;
    line-height: 1.25;
  }

  .product-page__rating {
    display: flex;
    align-items: center;
    gap: 4px;
    margin-bottom: 1.4rem;
  }

  .product-page__rating svg {
    fill: #FFB800;
  }

  .product-page__rating-text {
    font-size: 0.85rem;
    color: var(--color-text-muted, #6B7280);
    margin-left: 0.5rem;
  }

  .product-page__price {
    display: flex;
    align-items: baseline;
    gap: 0.8rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .product-page__price-current,
  .product-page__price-sale {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-size: 1.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00B4C8, #0090A0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: opacity 0.3s ease;
  }

  .product-page__price-old {
    font-size: 1.2rem;
    color: var(--color-text-muted, #6B7280);
    text-decoration: line-through;
    transition: opacity 0.3s ease;
  }

  .product-page__price-save {
    background: linear-gradient(135deg, #FFF0F0 0%, #FFE8E8 100%);
    color: #e53e3e;
    padding: 0.25rem 0.7rem;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 600;
    border: 1px solid rgba(229, 62, 62, 0.1);
    transition: opacity 0.3s ease;
  }

  .product-page__description {
    font-size: 0.95rem;
    color: var(--color-text-muted, #6B7280);
    line-height: 1.75;
    margin-bottom: 1.5rem;
  }

  .product-page__features-mini {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    margin-bottom: 2rem;
    padding: 20px 24px;
    background: #F8FAFB;
    border-radius: 16px;
    border: 1px solid rgba(0, 0, 0, 0.04);
  }

  .product-page__feature-mini {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 0.9rem;
    color: var(--color-text, #2D2D2D);
    font-weight: 500;
  }

  .product-page__label {
    font-weight: 600;
    font-size: 0.9rem;
    display: block;
    margin-bottom: 0.4rem;
  }

  .product-page__variants {
    margin-bottom: 1rem;
  }

  .product-page__select {
    width: 100%;
    padding: 0.8rem 1rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    font-size: 0.95rem;
    background: #F8FAFB;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    font-family: inherit;
  }

  .product-page__select:focus {
    outline: none;
    border-color: var(--color-primary, #00B4C8);
    box-shadow: 0 0 0 4px rgba(0, 180, 200, 0.12);
  }

  .product-page__quantity {
    margin-bottom: 1.4rem;
  }

  .product-page__qty-input {
    width: 80px;
    padding: 0.8rem 1rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    font-size: 0.95rem;
    text-align: center;
    background: #F8FAFB;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .product-page__qty-input:focus {
    outline: none;
    border-color: var(--color-primary, #00B4C8);
    box-shadow: 0 0 0 4px rgba(0, 180, 200, 0.12);
  }

  .product-page__add-btn {
    width: 100%;
    margin-bottom: 0.8rem;
    font-size: 1.05rem;
  }

  .product-page__add-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .product-page__trust-badges {
    display: flex;
    justify-content: space-between;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .product-page__trust-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.8rem;
    color: var(--color-text-muted, #6B7280);
    text-align: center;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .product-page__trust-badge:hover {
    transform: translateY(-3px);
  }

  @media (max-width: 768px) {
    .product-page__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-page__gallery {
      position: static;
    }

    .product-page__info {
      order: -1;
    }

    .product-page__gallery {
      order: 1;
    }

    .product-page__title {
      font-size: 1.5rem;
    }

    .product-page__price-current,
    .product-page__price-sale {
      font-size: 1.4rem;
    }

    .product-page__thumbnails {
      justify-content: center;
    }

    .product-page__thumb {
      width: 60px;
      height: 60px;
    }

    .product-page__trust-badges {
      gap: 0.75rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .product-page__trust-badge {
      font-size: 0.75rem;
    }

    .product-page__add-btn {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    var select = document.getElementById('variant-select');
    var mainImg = document.getElementById('product-main-img');
    var thumbnails = document.getElementById('product-thumbnails');
    var addBtn = document.getElementById('add-to-cart-btn');
    var priceCurrent = document.getElementById('price-current');
    var priceCompare = document.getElementById('price-compare');
    var priceSave = document.getElementById('price-save');

    if (!select || !mainImg) return;

    function switchImage(url, alt, imageId) {
      if (!url) return;

      mainImg.classList.add('is-switching');

      setTimeout(function() {
        mainImg.src = url;
        mainImg.alt = alt || '';
        mainImg.classList.remove('is-switching');
      }, 300);

      if (thumbnails && imageId) {
        var thumbs = thumbnails.querySelectorAll('.product-page__thumb');
        thumbs.forEach(function(thumb) {
          thumb.classList.remove('product-page__thumb--active');
          if (thumb.getAttribute('data-image-id') === String(imageId)) {
            thumb.classList.add('product-page__thumb--active');
          }
        });
      }
    }

    select.addEventListener('change', function() {
      var option = this.options[this.selectedIndex];
      var imageUrl = option.getAttribute('data-image-url');
      var imageAlt = option.getAttribute('data-image-alt');
      var imageId = option.getAttribute('data-image-id');
      var price = option.getAttribute('data-price');
      var comparePrice = option.getAttribute('data-compare-price');
      var priceRaw = parseInt(option.getAttribute('data-price-raw'), 10);
      var comparePriceRaw = parseInt(option.getAttribute('data-compare-price-raw'), 10);

      if (imageUrl) {
        switchImage(imageUrl, imageAlt, imageId);
      }

      if (priceCurrent && price) {
        priceCurrent.textContent = price;
      }

      if (priceCompare && comparePriceRaw && comparePriceRaw > priceRaw) {
        priceCompare.textContent = comparePrice;
        priceCompare.style.display = '';
        if (priceSave) {
          priceSave.style.display = '';
        }
      } else if (priceCompare) {
        priceCompare.style.display = 'none';
        if (priceSave) {
          priceSave.style.display = 'none';
        }
      }

      if (addBtn) {
        var isDisabled = option.disabled;
        addBtn.disabled = isDisabled;
        if (isDisabled) {
          addBtn.textContent = addBtn.getAttribute('data-sold-out') || 'Agotado';
        } else {
          addBtn.textContent = (addBtn.getAttribute('data-add-text') || 'Agregar al Carrito') + ' \u2014 ' + price;
        }
      }
    });

    if (thumbnails) {
      thumbnails.addEventListener('click', function(e) {
        var thumb = e.target.closest('.product-page__thumb');
        if (!thumb) return;

        var url = thumb.getAttribute('data-image-url');
        var alt = thumb.getAttribute('data-image-alt');
        var id = thumb.getAttribute('data-image-id');
        switchImage(url, alt, id);
      });
    }
  })();
{% endjavascript %}

