{% stylesheet %}
  /* ============================================
     VARENAL PAIN POINTS v3 ‚Äî Ultra-Creative
     ============================================ */

  .varenal-pain-points {
    position: relative;
    background: linear-gradient(170deg, #1A1A2E 0%, #0D1B2A 60%, #0A1628 100%);
    color: #FFFFFF;
    overflow: hidden;
  }

  /* Animated background */
  .pp__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .pp__bg-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .pp__bg-orb--1 {
    width: 350px;
    height: 350px;
    background: rgba(0, 180, 200, 0.1);
    top: -80px;
    left: -100px;
    animation: glowPulse 8s ease-in-out infinite;
  }

  .pp__bg-orb--2 {
    width: 300px;
    height: 300px;
    background: rgba(255, 107, 53, 0.08);
    bottom: -80px;
    right: -80px;
    animation: glowPulse 8s ease-in-out 4s infinite;
  }

  .pp__bg-lines {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(0, 180, 200, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 180, 200, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  /* Header */
  .pp__header {
    text-align: center;
    margin-bottom: 56px;
  }

  .pp__eyebrow {
    background: rgba(0, 180, 200, 0.15);
    color: var(--color-primary-light, #33D4E8);
    margin-bottom: 20px;
    border: 1px solid rgba(0, 180, 200, 0.2);
  }

  .pp__heading {
    font-family: var(--font-heading);
    font-weight: 800;
    font-size: 30px;
    line-height: 1.12;
    color: #FFFFFF;
    margin-top: 24px;
    margin-bottom: 18px;
    letter-spacing: -0.01em;
  }

  .pp__subheading {
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
    max-width: 560px;
    margin: 0 auto;
  }

  /* Grid */
  .pp__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  /* Card */
  .pp__card {
    position: relative;
  }

  .pp__card-inner {
    position: relative;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: 36px 32px;
    transition: all 0.4s var(--ease-spring);
    overflow: hidden;
  }

  .pp__card-inner:hover {
    transform: translateY(-8px);
    border-color: rgba(0, 180, 200, 0.4);
    background: rgba(255, 255, 255, 0.07);
    box-shadow: 0 16px 48px rgba(0, 180, 200, 0.12);
  }

  /* Hover shine effect */
  .pp__card-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, rgba(0, 180, 200, 0.06) 0%, transparent 60%);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .pp__card-inner:hover .pp__card-shine { opacity: 1; }

  /* Icon */
  .pp__icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: 16px;
    background: rgba(0, 180, 200, 0.12);
    color: var(--color-primary-light, #33D4E8);
    margin-bottom: 24px;
    transition: all 0.4s var(--ease-spring);
  }

  .pp__card-inner:hover .pp__icon {
    transform: scale(1.1);
    background: rgba(0, 180, 200, 0.2);
  }

  .pp__icon-ring {
    position: absolute;
    inset: -4px;
    border-radius: 20px;
    border: 1px solid rgba(0, 180, 200, 0.15);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .pp__card-inner:hover .pp__icon-ring { opacity: 1; }

  .pp__card-title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 20px;
    color: #FFFFFF;
    margin-bottom: 14px;
    line-height: 1.3;
  }

  .pp__card-body {
    font-family: var(--font-body);
    font-size: 15px;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.55);
  }

  /* Bottom bar */
  .pp__bottom {
    margin-top: 56px;
    text-align: center;
  }

  .pp__divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0, 180, 200, 0.3), transparent);
    margin-bottom: 24px;
  }

  .pp__bottom-text {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.4);
    letter-spacing: 0.02em;
  }

  /* ========== Tablet ========== */
  @media (min-width: 600px) {
    .pp__grid {
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }
  }

  /* ========== Desktop ========== */
  @media (min-width: 769px) {
    .pp__heading { font-size: 46px; }
    .pp__subheading { font-size: 18px; }
    .pp__grid { gap: 28px; }
    .pp__card-inner { padding: 40px 36px; }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    'use strict';

    var section = document.getElementById('why-varenal');
    if (!section) return;

    var targets = section.querySelectorAll('.animate-on-scroll');
    if (!targets.length) return;

    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -60px 0px'
    });

    targets.forEach(function(el) { observer.observe(el); });
  })();
{% endjavascript %}

