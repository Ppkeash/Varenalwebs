{% comment %}
  VARENAL Pain Points Section
  Four benefit cards addressing the target customer's pain points.
  Dark background (#1A1A2E), white text, staggered scroll animations.
{% endcomment %}

<section id="why-varenal" class="varenal-pain-points" {{ section.shopify_attributes }}>
  <div class="varenal-section">

    {%- comment -%} Header {%- endcomment -%}
    <div class="pain-points__header animate-on-scroll" data-delay="0">
      <span class="varenal-badge pain-points__eyebrow">
        {{ section.settings.eyebrow | default: 'DESIGNED FOR YOUR PAIN' }}
      </span>
      <h2 class="pain-points__heading">
        {{ section.settings.heading | default: 'Stop Enduring. Start Recovering.' }}
      </h2>
      <p class="pain-points__subheading">
        {{ section.settings.subheading | default: "Whether you're on your feet all day, recovering from an injury, or just exhausted ‚Äî VARENAL was engineered for you." }}
      </p>
    </div>

    {%- comment -%} Cards Grid {%- endcomment -%}
    <div class="pain-points__grid">
      {%- for block in section.blocks -%}
        <div
          class="pain-points__card animate-on-scroll"
          data-delay="{{ forloop.index }}"
          {{ block.shopify_attributes }}
        >
          <div class="pain-points__icon" aria-hidden="true">
            {%- case forloop.index -%}
              {%- when 1 -%}
                {%- comment -%} Flame icon {%- endcomment -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M8.5 14.5A2.5 2.5 0 0011 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 11-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 002.5 2.5z"/>
                </svg>
              {%- when 2 -%}
                {%- comment -%} Dollar/cross icon {%- endcomment -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 000 7h5a3.5 3.5 0 010 7H6"/>
                </svg>
              {%- when 3 -%}
                {%- comment -%} Circulation/wave icon {%- endcomment -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
              {%- when 4 -%}
                {%- comment -%} Lightning icon {%- endcomment -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                </svg>
              {%- else -%}
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                </svg>
            {%- endcase -%}
          </div>
          <h3 class="pain-points__card-title">
            {{ block.settings.title }}
          </h3>
          <p class="pain-points__card-body">
            {{ block.settings.body }}
          </p>
        </div>
      {%- endfor -%}
    </div>

    {%- comment -%} Bottom bar {%- endcomment -%}
    <div class="pain-points__bottom-bar animate-on-scroll" data-delay="5">
      <hr class="pain-points__divider">
      <p class="pain-points__bottom-text">
        ‚òÖ {{ section.settings.bottom_text | default: 'Trusted by nurses, athletes, teachers & everyone who spends their day on their feet.' }}
      </p>
    </div>

  </div>
</section>

{% stylesheet %}
  /* ============================================
     VARENAL PAIN POINTS
     ============================================ */

  .varenal-pain-points {
    background: #1A1A2E;
    color: #FFFFFF;
    overflow: hidden;
  }

  /* Header */
  .pain-points__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .pain-points__eyebrow {
    background: rgba(0, 180, 200, 0.2);
    color: #00B4C8;
    margin-bottom: 20px;
  }

  .pain-points__heading {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 28px;
    line-height: 1.15;
    color: #FFFFFF;
    margin-top: 20px;
    margin-bottom: 16px;
  }

  .pain-points__subheading {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: 16px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.65);
    max-width: 560px;
    margin: 0 auto;
  }

  /* Grid */
  .pain-points__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
  }

  /* Card */
  .pain-points__card {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s ease;
  }

  .pain-points__card:hover {
    transform: translateY(-8px);
    border-color: rgba(0, 180, 200, 0.4);
    box-shadow: 0 8px 32px rgba(0, 180, 200, 0.15);
  }

  /* Icon */
  .pain-points__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: rgba(0, 180, 200, 0.15);
    color: #00B4C8;
    margin-bottom: 20px;
  }

  .pain-points__card-title {
    font-family: var(--font-heading, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 20px;
    color: #FFFFFF;
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .pain-points__card-body {
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: 15px;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Bottom bar */
  .pain-points__bottom-bar {
    margin-top: 48px;
    text-align: center;
  }

  .pain-points__divider {
    border: none;
    height: 1px;
    background: rgba(0, 180, 200, 0.2);
    margin-bottom: 20px;
  }

  .pain-points__bottom-text {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.45);
  }

  /* ========== Tablet (2 columns) ========== */
  @media (min-width: 600px) {
    .pain-points__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  /* ========== Desktop ========== */
  @media (min-width: 769px) {
    .pain-points__heading {
      font-size: 44px;
    }

    .pain-points__subheading {
      font-size: 18px;
    }

    .pain-points__grid {
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }
  }
{% endstylesheet %}

{% javascript %}
  (function() {
    'use strict';

    var section = document.getElementById('why-varenal');
    if (!section) return;

    var targets = section.querySelectorAll('.animate-on-scroll');
    if (!targets.length) return;

    var observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.15,
      rootMargin: '0px 0px -50px 0px'
    });

    targets.forEach(function(el) {
      observer.observe(el);
    });
  })();
{% endjavascript %}

